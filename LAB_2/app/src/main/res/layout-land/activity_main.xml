<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:rowCount="6"
        android:columnCount="4">

        <!--Sex-->

        <TextView
            android:layout_row="0"
            android:layout_column="0"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/SexLabel"
            android:gravity="center_vertical"
            android:text="Sex" />

        <RadioGroup
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:layout_columnSpan="2"
            android:id="@+id/SexGroup"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/FemaleRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:checked="true"
                android:text="Female" />

            <RadioButton
                android:id="@+id/MaleRadioButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:checked="false"
                android:text="Male"/>
        </RadioGroup>

        <!--Height-->

        <TextView
            android:layout_row="1"
            android:layout_column="0"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/HeightLabel"
            android:gravity="center_vertical"
            android:text="Height" />

        <EditText
            android:layout_row="1"
            android:layout_column="1"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/HeightTextNumber"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_row="1"
            android:layout_column="2"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/HeightMeterLabel"
            android:gravity="center"
            android:text="сm" />

        <!--Age-->

        <TextView
            android:layout_row="2"
            android:layout_column="0"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/AgeLabel"
            android:gravity="center_vertical"
            android:text="Age" />

        <EditText
            android:layout_row="2"
            android:layout_column="1"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/AgeTextNumber"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_row="2"
            android:layout_column="2"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/AgeMeterLabel"
            android:gravity="center"
            android:text="y.o." />

        <!--Weight-->

        <TextView
            android:layout_row="3"
            android:layout_column="0"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/WeightLabel"
            android:gravity="center_vertical"
            android:text="Weight" />

        <EditText
            android:layout_row="3"
            android:layout_column="1"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/WeightTextNumber"
            android:ems="10"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal" />

        <TextView
            android:layout_row="3"
            android:layout_column="2"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/WeightMeterLabel"
            android:gravity="center"
            android:text="kg" />

        <!--Activity Level-->

        <TextView
            android:layout_row="4"
            android:layout_column="0"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:id="@+id/ActivityLevelLabel"
            android:gravity="center_vertical"
            android:text="Activity Level" />

        <Spinner
            android:layout_row="4"
            android:layout_column="1"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.1"
            android:layout_columnSpan="2"
            android:id="@+id/ActivityComboBox" />

        <!--Result-->

        <!--Auto CheckBox-->

        <EditText
            android:id="@+id/ResultTextView"
            android:layout_row="0"
            android:layout_rowWeight="0.1"
            android:layout_column="3"
            android:layout_columnWeight="0.2"
            android:background="@drawable/my_border"
            android:editable="false"
            android:gravity="center"
            android:hint="Result"
            android:text="" />

        <CheckBox
            android:layout_row="3"
            android:layout_column="3"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.2"
            android:id="@+id/InTimeCheckBox"
            android:gravity="center"
            android:text="Automatic calculation" />

        <!--Button Calculate-->

        <Button
            android:layout_row="4"
            android:layout_column="3"
            android:layout_rowWeight="0.1"
            android:layout_columnWeight="0.2"
            android:id="@+id/CalculateButton"
            android:text="Calculate" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>