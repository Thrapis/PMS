<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:descendantFocusability="beforeDescendants"
            android:focusableInTouchMode="true">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/SexLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="Sex" />

                    <RadioGroup
                        android:id="@+id/SexGroup"
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:layout_weight="0.7"
                        android:orientation="horizontal"
                        tools:layout_editor_absoluteX="94dp"
                        tools:layout_editor_absoluteY="220dp">

                        <RadioButton
                            android:id="@+id/FemaleRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:checked="true"
                            android:text="Female"
                            app:layout_constraintStart_toEndOf="@+id/SexGroup"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RadioButton
                            android:id="@+id/MaleRadioButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:checked="false"
                            android:text="Male"
                            app:layout_constraintStart_toEndOf="@+id/SexGroup"
                            app:layout_constraintTop_toTopOf="parent" />
                    </RadioGroup>
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/HeightLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="Height" />

                    <EditText
                        android:id="@+id/HeightTextNumber"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.6"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/HeightMeterLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="Ñm" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/AgeLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="Age" />

                    <EditText
                        android:id="@+id/AgeTextNumber"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.6"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/AgeMeterLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="y.o." />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/WeightLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="Weight" />

                    <EditText
                        android:id="@+id/WeightTextNumber"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.6"
                        android:ems="10"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:inputType="numberDecimal" />

                    <TextView
                        android:id="@+id/WeightMeterLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.1"
                        android:gravity="center"
                        android:text="kg" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/ActivityLevelLabel"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="0.3"
                        android:gravity="center_vertical"
                        android:text="Activity Level" />

                    <Spinner
                        android:id="@+id/ActivityComboBox"
                        android:layout_width="0dp"
                        android:layout_height="45dp"
                        android:layout_weight="0.7" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="20dp">

                <EditText
                    android:id="@+id/ResultTextView"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/my_border"
                    android:editable="false"
                    android:gravity="center"
                    android:hint="Result"
                    android:text=""
                    android:textColor="@color/black" />

                <CheckBox
                    android:id="@+id/InTimeCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Automatic calculation" />

                <Button
                    android:id="@+id/CalculateButton"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:text="Calculate" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>